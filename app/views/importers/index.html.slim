div.container-header
  h1.container-title Importers
  = link_to "New importer", new_importer_path, class: 'button primary'

div.container-body
  table
    thead
      tr
        th align="left" File name
        th align="left" State
        th align="left" Created at
    tbody#importers_tbody
      - @importers.each do |importer|
        tr[id="tr_importer_#{importer.id}"]
          td = importer.file.name
          td.state = importer.state
          td = importer.created_at.strftime('%Y-%m-%d %H:%M:%S')

= paginate @importers
